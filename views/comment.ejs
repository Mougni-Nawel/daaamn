<%- include("_header") -%>

<h1>Commenter une Plante</h1>

<form action="/comment/<%= model.Plante_ID %>" method="post">
  <div class="form-horizontal">

    <%- include("_commenter") -%>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Commenter" class="btn btn-default btn-warning" />
        <a class="btn btn-outline-dark cancel" href="/botaniste">Annuler</a>
      </div>
    </div>
  </div>
</form>

